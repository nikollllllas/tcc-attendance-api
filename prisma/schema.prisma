generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Beacon {
  id   Int    @id @default(autoincrement())
  uuid String @unique

  subject   Subject @relation(fields: [subjectId], references: [id])
  teacher   Teacher @relation(fields: [teacherId], references: [id])
  subjectId Int
  teacherId Int
}

model Course {
  id          Int    @id @default(autoincrement())
  name        String
  description String

  subjects Subject[] @relation("CourseSubjects")
  students Student[] @relation("StudentCourses")
}

model SchoolCall {
  id            Int      @id @default(autoincrement())
  proximityUUID String
  subjectId     Int
  createdAt     DateTime @default(now())
  
  students Student[] @relation("StudentSchoolCalls")
  subject  Subject  @relation(fields: [subjectId], references: [id], name: "SubjectSchoolCalls")
}

model Student {
  id                 Int      @id @default(autoincrement())
  cpf                String   @unique
  academicalRegister String   @unique
  name               String
  email              String
  courseId           Int
  birthDate          String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  course      Course       @relation("StudentCourses", fields: [courseId], references: [id])
  subjects    Subject[]    @relation("StudentSubjects")
  schoolCalls SchoolCall[] @relation("StudentSchoolCalls")
}

model Subject {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  workload    Int

  beacons     Beacon[]
  courses     Course[]     @relation("CourseSubjects")
  students    Student[]    @relation("StudentSubjects")
  teachers    Teacher[]    @relation("TeacherSubjects")
  schoolCalls SchoolCall[] @relation("SubjectSchoolCalls")
}

model Teacher {
  id        Int      @id @default(autoincrement())
  cpf       String   @unique
  name      String
  email     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  beacons  Beacon[]
  subjects Subject[] @relation("TeacherSubjects")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String
  password String?
}
